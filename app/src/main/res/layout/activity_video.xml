<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/activity_video_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/activity_video_pbBuffering"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/activity_video_lnPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/activity_video_imgPlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/default_content_description"
            android:padding="8dp"
            android:src="@mipmap/icon_start"
            android:tint="?colorAccent" />

        <SeekBar
            android:id="@+id/activity_video_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>