<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/card">
        <!-- 公告-->
        <LinearLayout
            android:id="@+id/item_showcase_lnBroadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:contentDescription="@string/default_content_description"
                    android:src="@color/test"
                    android:tint="@color/broadcast" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/broadcast"
                    android:textColor="@color/broadcast"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@drawable/line_broadcast" />

            <TextView
                android:id="@+id/item_showcase_tvPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:singleLine="true"
                android:text="@string/test1"
                android:textColor="@color/textColorContent"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- 帖子-->
        <LinearLayout
            android:id="@+id/item_showcase_lnTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/item_showcase_tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/test_title"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_showcase_tvChecking"
                    android:layout_width="56dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/shape_checking"
                    android:gravity="center"
                    android:text="@string/checking"
                    android:textColor="@color/checking"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/item_showcase_tvChecked"
                    android:layout_width="56dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/shape_checked"
                    android:gravity="center"
                    android:text="@string/checked"
                    android:textColor="@color/checked"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/item_showcase_tvTag"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/shape_circle_rank"
                    android:backgroundTint="@color/reply"
                    android:gravity="center"
                    android:text="@string/tag_reply"
                    android:textColor="@android:color/white"
                    android:visibility="invisible" />
            </FrameLayout>


            <TextView
                android:id="@+id/item_showcase_tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="@string/test_content"
                android:textColor="@color/textColorContent"
                android:textSize="16sp" />

            <!-- 图片-->
            <LinearLayout
                android:id="@+id/item_showcase_lnPictures"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_showcase_pic0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/default_content_description"
                    android:src="@color/test" />

                <ImageView
                    android:id="@+id/item_showcase_pic1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/default_content_description"
                    android:src="@color/test" />

                <ImageView
                    android:id="@+id/item_showcase_pic2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/default_content_description"
                    android:src="@color/test" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_showcase_tvUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="@string/test_user_info"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/item_showcase_tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_date"
                    android:textColor="@color/textColorDate" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>