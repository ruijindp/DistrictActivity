<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/card">
        <!-- 帖子-->
        <LinearLayout
            android:id="@+id/item_showcase_lnTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/item_showcase_tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="106dp"
                    android:singleLine="true"
                    android:text="@string/test_title"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_showcase_tvChecking"
                    android:layout_width="56dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/shape_checking"
                    android:gravity="center"
                    android:text="@string/checking"
                    android:textColor="@color/checking"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/item_showcase_tvChecked"
                    android:layout_width="56dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/shape_checked"
                    android:gravity="center"
                    android:text="@string/checked"
                    android:textColor="@color/checked"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/item_showcase_tvUnchecked"
                    android:layout_width="56dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/shape_unchecked"
                    android:gravity="center"
                    android:text="@string/unchecked"
                    android:textColor="@color/check"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/item_showcase_tvTag"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/shape_circle_reply"
                    android:gravity="center"
                    android:text="@string/tag_reply"
                    android:textColor="@android:color/white"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/item_showcase_lnExpertScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="4dp"
                    android:visibility="invisible"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_showcase_tvExpert1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/expert"
                        android:textSize="12sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:textColor="@android:color/white"
                        android:text="@string/expert_one"/>

                        <TextView
                            android:id="@+id/item_showcase_tvExpert1Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="12sp"
                            android:layout_marginLeft="8dp"
                            android:text="98"/>
                        <TextView
                            android:id="@+id/item_showcase_tvExpert1Fen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="9sp"
                            android:layout_marginLeft="5dp"
                            android:text="@string/activity_expert_score"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/item_showcase_tvExpert2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/expert"
                            android:textSize="12sp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:textColor="@android:color/white"
                            android:text="@string/expert_two"/>

                        <TextView
                            android:id="@+id/item_showcase_tvExpert2Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="12sp"
                            android:layout_marginLeft="8dp"
                            android:text="98"/>
                        <TextView
                            android:id="@+id/item_showcase_tvExpert2Fen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="9sp"
                            android:layout_marginLeft="5dp"
                            android:text="@string/activity_expert_score"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


            <TextView
                android:id="@+id/item_showcase_tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="@string/test_content"
                android:textColor="@color/textColorContent"
                android:textSize="16sp" />

            <!-- 图片-->
            <LinearLayout
                android:id="@+id/item_showcase_lnPictures"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_showcase_pic0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/default_content_description"
                    android:scaleType="centerCrop"
                    android:src="@color/test" />

                <ImageView
                    android:id="@+id/item_showcase_pic1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/default_content_description"
                    android:scaleType="centerCrop"
                    android:src="@color/test" />

                <ImageView
                    android:id="@+id/item_showcase_pic2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/default_content_description"
                    android:scaleType="centerCrop"
                    android:src="@color/test" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_showcase_tvUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="@string/test_user_info"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/item_showcase_tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_date"
                    android:textColor="@color/textColorDate" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>